defpackage slm/commands/clean:
  import core

  import slm/file-utils
  import slm/logging

public defn clean () -> False:
  debug("cleaning .slm")
  delete-files-in-dir(".slm/pkgs/")
  delete-files-in-dir(".slm/deps/")
  create-empty-file(".slm/stanza.proj")
  delete-file-if-exists("slm.lock")
  false
