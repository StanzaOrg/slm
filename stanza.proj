include? ".slm/stanza.proj"

packages slm/* defined-in "src/"
packages slm/tests/* defined-in "tests/"

pkg-cache: ".slm/pkg-cache"

build main:
  inputs: slm/main
  pkg: ".slm/pkgs"
  o: "slm"

build-test tests:
  inputs:
    slm/tests/git-utils
    slm/tests/utils
    slm/tests/toml
    slm/tests/task
    slm/tests/commands/add
    slm/tests/commands/add-task
    slm/tests/commands/remove
  pkg: "test-pkgs"
  o: "slm-tests"
